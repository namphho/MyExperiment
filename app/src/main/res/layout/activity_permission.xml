<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".experiments.permission.PermissionActivity">

        <Button
            android:id="@+id/btnRequestCameraPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Request Camera Permission"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRequestMultiPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Request Multi Permission"
            app:layout_constraintEnd_toEndOf="@+id/btnRequestCameraPermission"
            app:layout_constraintStart_toStartOf="@+id/btnRequestCameraPermission"
            app:layout_constraintTop_toBottomOf="@+id/btnRequestCameraPermission" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>